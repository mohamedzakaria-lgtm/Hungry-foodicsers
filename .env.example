# Server Configuration
PORT=3000
NODE_ENV=production

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database-name?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-to-something-long-and-random-at-least-32-characters
JWT_EXPIRES_IN=7d

# Firebase Configuration (Base64 encoded or JSON string)
# Run: npm run prepare-firebase to get base64 string
FIREBASE_SERVICE_ACCOUNT=eyJ0eXBlIjoic2VydmljZV9hY2NvdW50IiwicHJvamVjdF9pZCI6...

# Session Secret (for OAuth)
SESSION_SECRET=your-random-session-secret-key-at-least-32-characters

# Frontend URL (for OAuth redirects)
FRONTEND_URL=https://your-mobile-app-url.com

# Google OAuth (Optional - if using Google login)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-your-google-client-secret
GOOGLE_CALLBACK_URL=https://your-replit-url.replit.app/api/auth/google/callback
